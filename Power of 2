import java.io.*;
import java.util.*;

public class Solution {
    public static boolean res(int n){
        while(n>=2){
            if(n%2!=0)return false;
            n/=2;
        }
        return true;
        
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        boolean ans = res(n);
            System.out.println(ans);
        
    }
}
